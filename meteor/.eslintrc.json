{
  "env": {
    "browser": true,
    "meteor": true
  },
  "extends": [
    "airbnb/base",
    "plugin:meteor/guide",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "meteor",
    "react"
  ],
  "globals": {
    "server": false,
    "browser": false,
    "expect": false
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "yoda":0,
    "no-plusplus":0,
    "object-curly-spacing": 0,
    "arrow-spacing": 0,
    "import/no-unresolved": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_ensureIndex",
          "_verifyEmailToken",
          "_resetPasswordToken",
          "_name",
          "_this",
          "__"
        ]
      }
    ],
    "max-len": 0,
    "class-methods-use-this": 0,
    "no-useless-constructor": 0
  }
}
